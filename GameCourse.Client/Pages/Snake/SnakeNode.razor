@using static GameCourse.Client.Pages.Snake.SnakeGame

<div class="snake-node"
     style="width:@(GameOptions.NodeSize - 1)px; height:@(GameOptions.NodeSize - 1)px; top:@(NodePosition.Y * GameOptions.NodeSize)px; left:@(NodePosition.X * GameOptions.NodeSize)px; background-color: @(IsAlive ? "blue" : "grey")">
</div>

@code {
    [CascadingParameter]
    SnakeGameOptions GameOptions { get; set; }

    [Parameter]
    public bool IsAlive { get; set; } = true;

    [Parameter]
    public SnakeGame.Position NodePosition{ get; set; }
}
