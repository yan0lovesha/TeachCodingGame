
<div class="snake-node"
     style="top:@(NodePosition.Y * NodeSize)px; left:@(NodePosition.X * NodeSize)px; background-color: @(IsAlive ? "blue" : "grey")">
</div>

@code {
    [Parameter]
    public int NodeSize { get; set; } = 41;

    [Parameter]
    public bool IsAlive { get; set; } = true;

    [Parameter]
    public SnakeGame.Position NodePosition{ get; set; }
}
